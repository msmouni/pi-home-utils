BasedOnStyle: LLVM

# Indentation
IndentWidth: 4
TabWidth: 4
UseTab: Never

# Line length
ColumnLimit: 100

# Braces (Linux/embedded style)
BreakBeforeBraces: Linux

# Keep control statements readable
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

# Includes
SortIncludes: true
IncludeBlocks: Preserve
